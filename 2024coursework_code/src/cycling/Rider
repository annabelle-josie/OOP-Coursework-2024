package cycling;

/**
 * Rider Class
 * Allows riders to be created
 * Currently accepts name and yearOfBirth and sets the ID
 * Just getters and setters (basically)
 * TODO: add Team IDs!
 */

public class Rider{
    //Is best programming practice to declare as a group or individually
    private int riderID, yearOfBirth;
    private int teamID; //This might not make sense to be defined here?
    private int nextID;
    private String name;
    //Then some way of counting their point totals

    /**
     * Constructor class for rider
     * Creates new Rider with unique ID
     */
    public Rider(){
        //ID will incriment each time. If a rider is deleted then there will just be a gap in the numbers
        this.riderID = nextID;
        nextID++;
    }

    public static void fillDetails(String name, int yearOfBirth){
        this.name = name;
        this.yearOfBirth = yearOfBirth;
    }

    public static int getRiderID(){
        return riderID;
    }

    public static String getName(){
        return name;
    }

    public static int getYearOfBirth(){
        return yearOfBirth;
    }
}